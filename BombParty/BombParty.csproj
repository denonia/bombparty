<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>bomb.ico</ApplicationIcon>
	<RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PublishSingleFile>true</PublishSingleFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\avatar-1.jpg" />
    <None Remove="Resources\avatar-2.jpg" />
    <None Remove="Resources\avatar-3.jpg" />
    <None Remove="Resources\avatar-4.jpg" />
    <None Remove="Resources\avatar-5.jpg" />
    <None Remove="Resources\avatar-6.jpg" />
    <None Remove="Resources\avatar-7.jpg" />
    <None Remove="Resources\avatar-8.jpg" />
    <None Remove="Resources\bomb.png" />
    <None Remove="Resources\goofy.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="bomb.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FontAwesome5" Version="2.1.11" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="8.0.10" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BombParty.Common\BombParty.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\avatar-1.jpg" />
    <Resource Include="Resources\avatar-2.jpg" />
    <Resource Include="Resources\avatar-3.jpg" />
    <Resource Include="Resources\avatar-4.jpg" />
    <Resource Include="Resources\avatar-5.jpg" />
    <Resource Include="Resources\avatar-6.jpg" />
    <Resource Include="Resources\avatar-7.jpg" />
    <Resource Include="Resources\avatar-8.jpg" />
    <Resource Include="Resources\bomb.png" />
    <Resource Include="Resources\goofy.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
